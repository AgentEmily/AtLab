@model IEnumerable<Model_Category.Models.Categories>
@{
    ViewBag.Title = "產品分類資料";
}

<h2>產品分類資料</h2>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>分類編號</th>
            <th>分類名稱</th>
            <th>描述</th>
            <th>編輯</th>
            <th>刪除</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var _category in Model)
        {
            <tr>
                <td>@_category.CategoryID</td>
                <td>@_category.CategoryName</td>
                <td>@_category.Description</td>
                <td><a href="/Home/Edit/@_category.CategoryID">編輯</a></td>
                <td><a href="/Home/Delete/@_category.CategoryID">刪除</a></td>
            </tr>
        }

    </tbody>
</table>

